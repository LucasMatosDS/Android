<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo">


    <Button
        android:id="@+id/bt_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/red"
        android:text="@string/bt_red" />

    <Button
        android:id="@+id/bt_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_red"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-48dp"
        android:layout_toRightOf="@id/bt_red"
        android:background="@color/orange"
        android:text="@string/bt_orange" />

    <Button
        android:id="@+id/bt_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_orange"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="-48dp"
        android:layout_toRightOf="@id/bt_orange"
        android:background="@color/yellow"
        android:text="@string/bt_yellow" />

    <Button
        android:id="@+id/bt_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_yellow"
        android:layout_below="@id/bt_yellow"
        android:text="@string/bt_green"
        android:background="@color/green"/>

    <Button
        android:id="@+id/bt_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bt_green"
        android:layout_below="@id/bt_green"

        android:text="@string/bt_blue"
        android:background="@color/blue"/>


    <Button
        android:id="@+id/bt_indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bt_blue"
        android:layout_below="@id/bt_blue"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/bt_indigo"
        android:background="@color/indigo"/>

    <Button
        android:id="@+id/bt_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_indigo"
        android:layout_marginTop="39dp"
        android:layout_marginRight="2dp"
        android:paddingLeft="250dp"
        android:paddingRight="130dp"
        android:layout_toLeftOf="@id/bt_indigo"
        android:background="@color/pink"
        android:text="@string/bt_pink" />
</RelativeLayout>